{ pkgs, username, ... }:
{
  security = {
    polkit = {
      enable = true;
      debug = true;
      extraConfig = ''
        /* Log authorization checks. */
        polkit.addRule(function(action, subject) {
          polkit.log("user " +  subject.user + " is attempting action " + action.id + " from PID " + subject.pid);
        });       
      '';
    };
  };
  programs.gnupg.agent.enable = true;
}
